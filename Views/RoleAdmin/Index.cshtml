@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Northwind - Identity Roles";
    Layout = "_Layout";
}

<p class="lead">Oh powerful overlord, here is your ledger of slave roles.</p>

<hr class="my-4">
<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    @if (!Model.Any())
    {
        <tr>
            <td>No roles</td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@role.Id">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>

@section Scripts {
    <script src="/js/client.js"></script>
}