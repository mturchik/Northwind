@using Models
@model EmployeeWithPassword

<p class="lead">Register as our newest and bestest customer! Do it right now!</p>

<hr class="my-4">
<form method="post" asp-action="Register" asp-controller="Employee">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="@Model.Employee.Name">Employee Name: </label>
            <input asp-for="@Model.Employee.Name" class="form-control" placeholder="Employee Name" required="required">
        </div>
        <div class="form-group col">
            <label asp-for="@Model.Employee.Address">Street Address: </label>
            <input asp-for="@Model.Employee.Address" class="form-control" placeholder="Street Address">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="@Model.Employee.Phone">Phone Number: </label>
                    <input asp-for="@Model.Employee.Phone" class="form-control" placeholder="Phone Number">
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.Employee.Fax">Fax Number: </label>
                    <input asp-for="@Model.Employee.Fax" class="form-control" placeholder="Fax Number">
                </div>
            </div>
        </div>
        <div class="form-group col">
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="@Model.Employee.City">City: </label>
                    <input asp-for="@Model.Employee.City" class="form-control" placeholder="City">
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.Employee.Region">Region: </label>
                    <input asp-for="@Model.Employee.Region" class="form-control" placeholder="Region">
                </div>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
        </div>
        <div class="form-group col">
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="@Model.Employee.PostalCode">Postal Code: </label>
                    <input asp-for="@Model.Employee.PostalCode" class="form-control" placeholder="Postal Code">
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.Employee.Country">Country: </label>
                    <input asp-for="@Model.Employee.Country" class="form-control" placeholder="Country">
                </div>
            </div>
        </div>
        <div class="form-group col">
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="@Model.Password">Password: </label>
                    <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group col">
                    <label asp-for="@Model.Employee.Email">Email: </label>
                    <input asp-for="@Model.Employee.Email" class="form-control" placeholder="Email">
                </div>
            </div>
        </div>
    </div>
    <hr class="my-4">
    <div class="form-group row">
        <button type="submit" class="btn btn-primary mx-auto w-25">Register Employee</button>
    </div>
</form>

@section Scripts {
    <script src="/js/client.js"></script>
}