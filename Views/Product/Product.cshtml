@model Northwind.Models.Product

@{
    ViewData["Title"] = "Northwind Product";
}

<p class="lead">Great choice! Buy today!</p>

<hr class="my-4">
<div class="row">
    <div class="col-6">
        <h1>@Model.ProductName</h1>
        <hr />
        <h3>Price: $@Model.UnitPrice</h3>
        <hr />
    </div>
    <div class="col-6">
        <h4>Category: @Model.Category.CategoryName</h4>
        <hr />
        <h4>Quantity Per Unit: @Model.QuantityPerUnit</h4>
        <hr />
    </div>
</div>
<div class="row mb-5">
    <button class="btn btn-success">Add to cart</button> <span>ID: @Model.ProductId</span>
</div>
<div class="row">
    <a class="font-weight-light" asp-controller="Category" asp-action="Products" asp-route-id="@Model.CategoryId">Return to category page</a>
</div>

@section Scripts {
    <script src="/js/client.js"></script>
}