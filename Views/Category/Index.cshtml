@{
    ViewData["Title"] = "Northwind Categories";
}

@using Northwind.Models
@model IEnumerable<Category>

<div class="container-fluid mb-5">
    <div class="jumbotron my-2 shadow-lg mb-0 ml-3 mr-3 pb-5">
        <h1 class="display-4">Northwind Traders & Co.</h1>
        <p class="lead">Check out the unique categories of our products below!</p>

        <hr class="my-4">
        <p>Unique categories, designed to cater to your tastes.</p>
        <div class="list-group list-group-flush">
            @foreach (Category c in Model)
            {
                <a class="list-group-item d-flex justify-content-between align-items-center" asp-controller="Category" asp-action="Product" asp-route-id="@c.CategoryId">
                    <div>
                        @c.CategoryName<span class="badge badge-primary badge-pill">@c.Products.Count(p => p.Discontinued == false)</span>
                    </div>
                    <p class="m-1">@c.Description</p>
                </a>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/client.js"></script>
}